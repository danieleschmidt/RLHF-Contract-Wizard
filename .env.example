# RLHF-Contract-Wizard Environment Configuration

# Application Environment
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rlhf_contracts
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain Configuration
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_URL=http://localhost:8545
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
CONTRACT_DEPLOY_GAS_LIMIT=6000000
BLOCKCHAIN_TIMEOUT=30

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
SESSION_SECRET=your-session-secret-key
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Storage
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=10MB
ALLOWED_EXTENSIONS=json,pkl,csv,txt

# Monitoring & Observability
METRICS_ENABLED=true
METRICS_PORT=9090
SENTRY_DSN=
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@rlhf-contracts.org

# External API Keys (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_TOKEN=

# Legal & Compliance
DEFAULT_JURISDICTION=Global
REGULATORY_FRAMEWORK=
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
GDPR_ENABLED=true

# Performance & Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
RATE_LIMIT_PER_MINUTE=100
BATCH_SIZE=50

# Feature Flags
ENABLE_FORMAL_VERIFICATION=true
ENABLE_BLOCKCHAIN_DEPLOYMENT=true
ENABLE_MULTI_STAKEHOLDER=true
ENABLE_DEMOCRATIC_VOTING=true
ENABLE_COMPLIANCE_MONITORING=true

# Development Only
DEVELOPMENT=true
TESTING=false
AUTO_RELOAD=true
PROFILING=false
MOCK_BLOCKCHAIN=false