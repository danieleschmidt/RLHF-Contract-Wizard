# RLHF-Contract-Wizard Environment Configuration

# Application Settings
APP_NAME=RLHF-Contract-Wizard
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rlhf_contracts
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TIMEOUT=5

# Blockchain Configuration
ETHEREUM_MAINNET_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_TESTNET_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
POLYGON_URL=https://polygon-rpc.com
POLYGON_MUMBAI_URL=https://rpc-mumbai.maticvigil.com
LOCAL_BLOCKCHAIN_URL=http://localhost:8545

# Blockchain Wallet Configuration
PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
WALLET_ADDRESS=YOUR_WALLET_ADDRESS_HERE
DEFAULT_GAS_LIMIT=3000000
DEFAULT_GAS_PRICE=20000000000

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080
IPFS_TIMEOUT=30

# Verification Configuration
Z3_TIMEOUT=60
LEAN_TIMEOUT=120
VERIFICATION_CACHE_SIZE=1000
VERIFICATION_CACHE_TTL=3600

# JAX Configuration
JAX_PLATFORM_NAME=cpu
JAX_ENABLE_X64=true
JAX_DEBUG_MODE=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=60
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400
BCRYPT_ROUNDS=12

# OpenChain Configuration
OPENCHAIN_API_URL=https://api.openchain.org
OPENCHAIN_API_KEY=YOUR_OPENCHAIN_API_KEY
OPENCHAIN_TIMEOUT=30

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# External Services
GITHUB_TOKEN=YOUR_GITHUB_TOKEN
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Development Tools
JUPYTER_PORT=8888
TENSORBOARD_PORT=6006
MLFLOW_PORT=5000

# Testing Configuration
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/rlhf_contracts_test
PYTEST_WORKERS=auto
COVERAGE_THRESHOLD=85

# Production Overrides (uncomment for production)
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING
# API_WORKERS=8
# DATABASE_POOL_SIZE=20