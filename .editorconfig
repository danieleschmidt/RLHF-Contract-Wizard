# EditorConfig configuration for RLHF-Contract-Wizard

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyx,pyi}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.{html,css,scss}]
indent_style = space
indent_size = 2

[*.{md,rst}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{sol,vy}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{toml,cfg,ini}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2