# Production Environment Variables for RLHF Contract Wizard

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=rlhf_contracts
POSTGRES_USER=postgres

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# API Configuration
API_SECRET_KEY=your_very_secure_api_secret_key_here_at_least_32_chars
JWT_SECRET=your_jwt_secret_key_here_at_least_32_characters_long
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=production

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_RETENTION=30d

# Security
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Auto-scaling
MIN_REPLICAS=3
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Backup
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# External Services
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your_project_id
MONITORING_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
BURST_LIMIT=20

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3